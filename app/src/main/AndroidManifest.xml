<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kyostudios.filmjournal" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainContentHandler"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityCameraEntry"
            android:theme="@style/EntryTheme"/>
        <activity android:name=".ActivityFilmRollEntry"
            android:theme="@style/EntryTheme"/>
        <activity android:name=".ActivityLensEntry"
            android:theme="@style/EntryTheme"/>
        <activity android:name=".ActivityPhotosEntry"
            android:theme="@style/EntryTheme"/>
    </application>

</manifest>
